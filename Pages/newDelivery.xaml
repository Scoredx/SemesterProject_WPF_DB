<Window x:Class="SemesterProject_WPF_DB.newDelivery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemesterProject_WPF_DB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="TSM: New Delivery" Height="400" Width="807.692" Icon="../logo.ico" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="productViewSource" d:DesignSource="{d:DesignInstance {x:Type local:product}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource productViewSource}" >
        <Button x:Name="button_productReload" Content="Reload" FontSize="11" Margin="489,238,164,86" Click="button_productReload_Click" Width="149" Height="47"/>
        <Button x:Name="button_productDelete" Content="Delete product" FontSize="11" Margin="643,238,10,86" Click="button_productDelete_Click" Width="149" Height="47"/>
        <Button x:Name="button_productNewProduct" Content="New Product"  FontSize="11" Margin="489,186,10,138" Click="button_productNewProduct_Click" Width="303" Height="46"/>
        <Button x:Name="button_productCancel" Content="Close"   FontSize="11" Margin="643,289,10,34" Click="button_productCancel_Click" Width="149" Height="48"/>


        <DataGrid x:Name="productDataGrid" HorizontalAlignment="Left" Height="162" Margin="10,10,0,0" VerticalAlignment="Top" Width="628" CanUserReorderColumns="True"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Height="27" Margin="12,229,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Category" HorizontalAlignment="Left" Height="27" Margin="12,261,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Manufacturer" HorizontalAlignment="Left" Height="27" Margin="12,197,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Price" HorizontalAlignment="Left" Height="27" Margin="12,293,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Cost" HorizontalAlignment="Left" Height="27" Margin="12,325,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="product_ManufacturerTextBox" HorizontalAlignment="Left" Height="27" Margin="101,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center"/>
        <TextBox x:Name="product_NameTextBox" HorizontalAlignment="Left" Height="27" Margin="101,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center"/>
        <TextBox x:Name="product_CategoryTextBox" HorizontalAlignment="Left" Height="27" Margin="101,261,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center"/>
        <TextBox x:Name="product_PriceTextBox" HorizontalAlignment="Left" Height="27" Margin="101,293,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center"/>
        <TextBox x:Name="product_CostTextBox" HorizontalAlignment="Left" Height="27" Margin="101,325,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center"/>
        <Button Content="Show Raw Table" HorizontalAlignment="Left" Height="47" Margin="489,290,0,0" VerticalAlignment="Top" Width="149" Click="Button_Click"/>
    </Grid>
</Window>
    

